@model medcenter_backend.Models.Consulta

@{
    ViewData["Title"] = "Cancelar Consulta";
}

<h2>Cancelar Consulta</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CancelConfirmed" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Paciente.Nome" class="control-label">Paciente</label>
                <input asp-for="Paciente.Nome" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Dependente.Nome" class="control-label">Dependente</label>
                <input asp-for="Dependente.Nome" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Clinica.Nome" class="control-label">Clínica</label>
                <input asp-for="Clinica.Nome" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Medico.Nome" class="control-label">Médico</label>
                <input asp-for="Medico.Nome" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="DataConsulta" class="control-label">Data da Consulta</label>
                <input asp-for="DataConsulta" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label">Status</label>
                <input asp-for="Status" class="form-control" readonly />
            </div>

            <div class="form-group">
                <input type="submit" value="Confirmar Cancelamento" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-default">Voltar</a>
            </div>
        </form>
    </div>
</div>
