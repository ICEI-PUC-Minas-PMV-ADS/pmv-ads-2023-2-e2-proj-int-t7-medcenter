@model ContactViewModel
@{
    ViewData["Title"] = "Empresas";
}
<body class="body_empresas">

<div class="main_empresas">
 
    <div class="left_empresas">
        <h3>Cuidando da saúde da sua empresa </h3>
        <p>Conheça as nossas soluções em saúde para atender as necessidades da sua empresa e manter o bem-estar dos seus colaboradores.</p>
        </div>

    <form class="form_empresas" method="post" asp-action="SendContact" autocomplete="off">

        <div class="form-group mb-2">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" type="text">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Name2"></label>
            <input class="form-control" asp-for="Name2" type="text">
            <span asp-validation-for="Name2" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Phone"></label>
            <input class="form-control" asp-for="Phone" type="tel">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" type="email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    
        <input type="submit" class="btn btn-lg btn-primary" value="Enviar">
    </form>
  </div>
</body>




@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Message"]
    </div>
}